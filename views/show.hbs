<section class="posts">
  <div class="artist">
    {{artist}}
  </div>

  <div class="album">
    <img src="{{imgURL}}" alt="" class="imgURL" />
    {{album}}
    </div>

  <div class="release">
    {{release}}
  </div>
</section>
<div class="description">
  {{albumDescription}}
</div>
</section>

<form class="" action="/posts/{{_id}}/delete" method="post">
  <input class="button" type="submit" value="Delete">
</form>

<p>
  <a class="back" href="/">Back to Album Collections</a>
</p>
